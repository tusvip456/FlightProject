@*@model Flight.Models;*@
@{
    ViewBag.Title = "ConfirmTicket";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}


<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Xác nhận Vé</title>
    <link rel="stylesheet" href="~/Content/ticketstyle.css">
    <style>
        .confirmation-container {
            width: 50%;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }

        h2 {
            text-align: center;
            color: #333;
        }

        .ticket-details {
            margin-top: 20px;
        }

            .ticket-details p {
                font-size: 16px;
                line-height: 1.5;
            }

        .payment-options {
            margin-top: 20px;
            text-align: center;
        }

            .payment-options .btn {
                margin: 5px;
                padding: 10px 20px;
                font-size: 14px;
                cursor: pointer;
            }

    </style>
</head>
<body>
    <div class="confirmation-container">
        <h2>Xác nhận Thông tin Vé</h2>
        <div class="ticket-details">
            <p><strong>Điểm Đi:</strong> @Model.Departure</p>
            <p><strong>Điểm Đến:</strong> @Model.Destination</p>
            <p><strong>Ngày Đi:</strong> @Model.DepartureDate.ToString("dd/MM/yyyy")</p>
            <p><strong>Số Lượng Hành Khách:</strong> @Model.NumberOfPassengers</p>
            <p><strong>Giá Vé:</strong> @Model.Price.ToString("C")</p>
        </div>
        <div class="payment-options">
            <h3>Chọn phương thức thanh toán</h3>
            <form method="post" action="/Payment/Process">
                <button type="submit" class="btn btn-primary">Thanh toán qua thẻ</button>
                <button type="submit" class="btn btn-secondary">Thanh toán khi nhận vé</button>
            </form>
        </div>
    </div>
</body>
</html>
