        <!-- Modal -->
        <div class="modal fade" id="ticketModal" tabindex="-1" aria-labelledby="ticketModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="ticketModalLabel">Thông Tin Vé Đã Chọn</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p id="ticketClass"></p>
                        <p id="ticketBenefits"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="button" class="btn btn-primary" id="confirmTicket">Xác Nhận</button>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js"></script>
        <script>
            $(document).ready(function () {
                $('.select-ticket').click(function () {
                    $('.select-ticket').removeClass('active'); // Xóa active từ tất cả
                    $(this).addClass('active'); // Thêm active cho nút đang chọn

                    const price = $(this).data('price');
                    const flightTime = $(this).data('flight');
                    let ticketClass;
                    let ticketBenefits;

                    // Phân loại vé và ưu đãi
                    if (price <= 1200000) {
                        ticketClass = "Vé Thường";
                        ticketBenefits = "Không có ưu đãi.";
                    } else if (price >= 1600000 && price < 2000000) {
                        ticketClass = "Vé Thương Gia";
                        ticketBenefits = "Ăn nhẹ miễn phí và 10% giảm giá cho chuyến bay tiếp theo.";
                    } else { // price >= 2000000
                        ticketClass = "Vé VIP";
                        ticketBenefits = "Phục vụ ăn uống cao cấp, quyền truy cập lounge và 20% giảm giá cho chuyến bay tiếp theo.";
                    }

                    // Hiển thị thông tin vé đã chọn
                    $('#ticketClass').text(`Hạng Vé: ${ticketClass}`);
                    $('#flightTime').text(`Giờ bay: ${flightTime}`);
                    $('#ticketBenefits').text(`Ưu Đãi: ${ticketBenefits}`);
                    $('#ticketModal').modal('show');
                });

                // Xử lý khi người dùng xác nhận chọn vé cũng như lấy giá vé
                $('#confirmTicket').click(function () {
                    const price = $('.select-ticket.active').data('price'); // Lấy giá từ nút đã chọn
                    const flightTime = $('#flightTime').text().replace('Giờ bay: ', ''); // Lấy giờ bay
                    const ticketClass = $("#ticketClass").text().replace("Hạng Vé: ", ""); // Lấy giá trị hạng vé
                    const ticketBenefits = $("#ticketBenefits").text().replace("Ưu Đãi: ", ""); // Lấy ưu đãi

                    // Chuyển hướng đến trang detail với các tham số
                    window.location.href = `/Ticket/Details?class=${encodeURIComponent(ticketClass)}&price=${price}&benefits=${encodeURIComponent(ticketBenefits)}&flightTime=${encodeURIComponent(flightTime)}`;

                });
            });
        </script>
</body>
</html>
