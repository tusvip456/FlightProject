@{
    ViewBag.Title = "Chi Tiết Vé Máy Bay";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/stylepro.css" />
    <link rel="stylesheet" href="~/Content/ticketstyle.css" />
    <style>

        h2 {
            text-align: center;
            color: #007bff;
            margin-bottom: 1.5rem;
        }

        .card {
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: white;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
        }

        .card-body p {
            font-size: 1.1rem;
            margin-bottom: 0.75rem;
        }

        .form-label {
            font-weight: 500;
        }

        .btn-success {
            width: 100%;
            font-size: 1rem;
        }

        .icon {
            color: #007bff;
            margin-right: 8px;
        }

        .details-item {
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <div class="container mt-3">
        <h2><i class="fas fa-plane icon"></i> Chi Tiết Vé Máy Bay</h2>
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-ticket-alt icon"></i> Thông Tin Vé</h5>
            </div>
            <div class="card-body">
                <p class="details-item"><i class="fas fa-chair icon"></i> <strong>Hạng vé:</strong> <span id="ticketClass"></span></p>
                <p class="details-item"><i class="far fa-clock icon"></i> <strong>Giờ bay:</strong> <span id="flightTime"></span></p>
                <p class="details-item"><i class="fas fa-dollar-sign icon"></i> <strong>Giá vé:</strong> <span id="ticketPrice"></span></p>
                <p class="details-item"><i class="fas fa-gift icon"></i> <strong>Ưu đãi:</strong> <span id="ticketBenefits"></span></p>

                <hr>
                <h6><i class="fas fa-user icon"></i> Thông tin người dùng</h6>

                @if (Session["Account"] == null)
                {
                    <form id="userInfoForm">
                        <div class="mb-3">
                            <label for="userName" class="form-label">Họ và tên:</label>
                            <input type="text" id="userName" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label for="userEmail" class="form-label">Email:</label>
                            <input type="email" id="userEmail" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-success">Xác nhận đặt vé</button>
                    </form>
                }
                else
                {
                    // xử lí lấy dữ liệu từ cơ sở dữ liệu nhưng mà giờ chưa có :)
                }
            </div>
        </div>
    </div>

    <script>
        // Các giá trị giá vé, hạng vé, ưu đãi và giờ bay đã chọn từ trang chọn vé
        const urlParams = new URLSearchParams(window.location.search);
        const ticketClass = urlParams.get('class') || 'Vé Thường';
        const flightTime = urlParams.get('flightTime') || 'Không có thông tin giờ bay';
        const ticketPrice = urlParams.get('price') || '0 VNĐ';
        const ticketBenefits = urlParams.get('benefits') || 'Không có ưu đãi.';

        // Hiển thị thông tin vé
        document.getElementById('ticketClass').innerText = ticketClass;
        document.getElementById('flightTime').innerText = flightTime;
        document.getElementById('ticketPrice').innerText = ticketPrice;
        document.getElementById('ticketBenefits').innerText = ticketBenefits;
    </script>
</body>
</html>
